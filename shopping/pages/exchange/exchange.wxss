/* pages/exchange/exchange.wxss */

page {
	background: #fff;
}

checkbox .wx-checkbox-input {
	width: 22rpx;
	height: 22rpx;

}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
	border-radius: 50%;
	width: 20rpx;
	height: 20rpx;
	line-height: 20rpx;
	text-align: center;
	font-size: 14rpx;
	color: #d3aa79;
	background: transparent;
	transform: translate(-50%, -50%) scale(1);
}

.exchange {
	height: auto;
	overflow: hidden;
	padding: 20rpx;
}

.exchange .exchangeImg {
	display: block;
	width: 297rpx;
	height: 307rpx;
	margin: 20rpx auto;
}

.exchange .exchangeTap {
	font-size: 28rpx;
	text-align: center;
	line-height: 50rpx;
	height: 50rpx;
}

.exchange .exchangeAge {
	overflow: hidden;
	padding: 40rpx 0rpx;
	background: #fff;
	font-size: 24rpx;
	color: #999;
	display: flex;
	justify-content: flex-start;
}

.exchange .exchangeAge>navigator {
	color: #d3aa79;
}

.exchange .exchangeInput {
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	overflow: hidden;
	border-bottom: 2rpx solid #e7e7e7;
	text-align: center;
	font-size: 32rpx;
	color: #333;
}

.siteSub {
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	overflow: hidden;
	border-radius: 8rpx;
	text-align: center;
	font-size: 32rpx;
	color: #fff;
	background: #343434;
}
