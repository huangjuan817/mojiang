/* pages/my/my.wxss */
@import "/public/iconfont.wxss";

page {
	background: #fff;
}

.icon-jifen,
.icon-quan,
.icon-wallet {
	font-size: 72rpx;
}

.bg {
	display: block;
	width: 750rpx;
	height: 496rpx;
}

.content {
	height: auto;
	overflow: hidden;
}

.content .hine {
	padding: 20rpx;
	overflow: hidden;
	font-size: 32rpx;
	color: #3c2c24;
}

.content .hine .hine_t2 {
	font-size: 24rpx;
}

.content .vip {
	height: auto;
	width: 90%;
	background: #fff;
	box-shadow: 0rpx 10rpx 20rpx rgba(0, 0, 0, .1);
	border-radius: 6rpx;
	margin: 40rpx auto;
	padding: 20rpx;
}

.content .vip.vipfirst {
	margin-top: 0rpx;
}

.content .vip .vip_head {
	width: 100%;
	height: auto;
	padding-bottom: 20rpx;
	border-bottom: 2rpx solid #e7e7e7;
	display: flex;
	justify-content: space-between;
}

.content .vip .vip_headC {
	flex: 3;
	overflow: hidden;
}

.content .vip .vip_headC .vip_headCtext {
	overflow: hidden;
	font-size: 24rpx;
	color: #5d5d5d;
}

.content .vip .vip_headC .vip_headCtext .vipIcon {
	width: 127rpx;
	height: 48rpx;
	float: left;
	display: block;
}

.content .vip .vip_headC .vip_headCtext .vipText {
	float: left;
	margin-left: 10rpx;
	height: 48rpx;
	line-height: 48rpx;
	background: #e9e9e9;
	border-radius: 40rpx;
	padding: 0 20rpx;
}

.content .vip .vip_headC .vip_headCtext .vipText .icongengduo {
	margin-left: 0rpx;
	font-size: 20rpx;
}

.content .vip .vip_headC .vip_headClevel {
	overflow: hidden;
	border: 2rpx solid #343434;
	border-radius: 6rpx;
	font-size: 24rpx;
	color: #343434;
	width: 60rpx;
	text-align: center;
	margin-top: 10rpx;
}

.content .vip .vip_headI {
	width: 120rpx;
	height: 120rpx;
	overflow: hidden;
	border-radius: 50%;
	margin-top: -70rpx;
}

.content .vip .vip_headI>image {
	width: 100%;
	height: 100%;
}

.content .vip .vip_list {
	width: 100%;
	overflow: hidden;
	display: flex;
	padding: 20rpx 0;
}

.content .vip .vip_list .vip_listC {
	flex: 1;
	text-align: center;
	font-size: 36rpx;
	color: #3e2b22;
}

.content .vip .vip_list .vip_listC .icondingwei {}

.content .vip .vip_list .vip_listC .vip_listText1 {
	font-weight: 600;
}

.content .vip .vip_list .vip_listC .vip_listText2 {
	color: #343434;
	font-size: 26rpx;
}

.content .vip .task {
	display: block;
	width: 591rpx;
	height: 197rpx;
}

.content .discounts {
	overflow: hidden;
	padding: 20rpx;
}

.content .discounts .discounts_head {
	width: 100%;
	height: 80rpx;
	line-height: 80rpx;
	overflow: hidden;
	display: flex;
	display: flex;
	justify-content: space-between;
	font-size: 30rpx;
	color: #343434;
	font-weight: 600;
}

.content .discounts .discounts_head .more {
	font-size: 24rpx;
	color: #999;
}

.content .discounts .discounts_list {
	overflow: hidden;
	display: flex;
	justify-content: space-between;
	font-size: 28rpx;
	text-align: center;
}

.content .discounts .discounts_list .discounts_listC {
	flex: 1;
	overflow: hidden;
}

.content .discounts .discounts_list .discounts_listC>image {
	width: 160rpx;
	height: 158rpx;
}

.content .discounts .list {
	overflow: hidden;
	padding: 30rpx 0;
	border-bottom: 2rpx solid #e7e7e7;
	font-size: 28rpx;
	color: #343434;
	display: flex;
	ustify-content: space-between;
}

.content .discounts .list:last-child {
	border-bottom: none;
}

.content .discounts .list .listLeft {
	flex: 1;
}

.content .discounts .list .listRight {
	flex: 4;
	font-size: 24rpx;
	color: #999;
	text-align: right;
}

.content .discounts .list .listRight .icongengduo {
	font-size: 24rpx;
	color: #999;
}
