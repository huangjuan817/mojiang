/* pages/note/note.wxss */
@import "/public/iconfont.wxss";

page {
	background: #fff;
}

.note {
	height: auto;
	overflow: hidden;
	padding: 30rpx;
}

.note .hine {
	overflow: hidden;
	font-size: 28rpx;
	color: #333;
	line-height: 80rpx;
}

.note .list {
	overflow: hidden;
	display: flex;
	flex-wrap: wrap;
	justify-content: flex-start;
}

.note .list>view {
	padding: 6rpx 20rpx;
	border: 2rpx solid #eee;
	margin: 10rpx 20rpx 0 0;
	border-radius: 6rpx;
	font-size: 24rpx;
	color: #999;
}

.note .list>view.active {
	border-color: #333;
	color: #333;
}

.note .text {
	width: 100%;
	height: 240rpx;
	overflow: hidden;
	border: 2rpx solid #eee;
	margin-top: 30rpx;
	padding: 20rpx 0;
	font-size: 30rpx;
	color: #333;
}

.note .text>textarea {
	padding: 0rpx 20rpx;
	line-height: 48rpx;
}

.note .submitBut {
	padding: 30rpx 0rpx;
}

.button-hover {
	color: #fff;
	background-color: #414040;

}

button {
	background-color: #898989;
	color: #fff;
}
